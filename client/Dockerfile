###############################################
# Stage 1
FROM node:16-alpine as build-stage

WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .

RUN npm run buildlegacy

###############################################
# Stage 2
FROM nginx:1.21.3-alpine

COPY --from=build-stage /app/build /usr/share/nginx/html
EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]